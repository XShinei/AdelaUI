{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES6",
    "jsx": "preserve",
    "lib": ["ESNext"],
    "types": ["vite/client"]
  },
  "include": ["src/**/*", "packages/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}